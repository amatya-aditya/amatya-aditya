  <span class="na">level</span><span class="pi">:</span> <span class="m">50</span>
  <span class="na">color</span><span class="pi">:</span> <span class="s">rgb(80, 185, 185)</span>

<span class="pi">-</span> <span class="na">title</span><span class="pi">:</span> <span class="s">PHP</span>
  <span class="na">level</span><span class="pi">:</span> <span class="m">40</span>
  <span class="na">color</span><span class="pi">:</span> <span class="s">rgb(124, 142, 222)</span>

